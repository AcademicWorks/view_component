<%= content_tag(:div, class: @class_names) do %>
  <% if @selectable %>
    <%= render(NestedSharedState::CellComponent.new) do %>
      <%= content_tag(:div, class: 'input input--boolean') do %>
        <%= content_tag(:input, '', id: "checkbox_for_#{@id}", value: @id, type: 'checkbox', checked: @checked) %>
        <%= label_tag("checkbox_for_#{@id}", "") %>
      <% end %>
    <% end %>
  <% end %>
  <% if cells.any? %>
    <% cells.each do |cell| %>
      <%= cell %>
    <% end %>
  <% end %>
<% end %>